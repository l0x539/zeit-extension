{
    "name": "Zeit",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Extension for Ziet.io, Time Tracking & Invoicing for Agencies & Freelancers.",
    "homepage_url": "https://zeit.io",
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "browser_action": {
      "default_title": "Ziet.io",
      "default_popup": "popup.html"
    },
    "default_locale": "en",
    "background": {
      "scripts": [
        "js/background.js"
      ],
      "persistent": true
    },
    "permissions": [
      "https://*/*",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://*/*"
        ],
        "js": [
          "js/content.js"
        ]
      }
    ]
  }
  
